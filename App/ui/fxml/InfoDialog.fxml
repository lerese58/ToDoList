<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="App.ui.TaskInfoController"
            prefHeight="400.0" prefWidth="600.0">
    <GridPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="189.0" minWidth="10.0" prefWidth="89.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="331.0" minWidth="10.0" prefWidth="274.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="224.0" minWidth="10.0" prefWidth="186.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label alignment="CENTER" contentDisplay="CENTER" text="ToDo's info:" GridPane.columnSpan="3"
               GridPane.halignment="CENTER">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
            <font>
                <Font size="19.0"/>
            </font>
        </Label>
        <Label text="ToDo: " GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <Label text="Owner: " GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
        <Label text="Deadline: " GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
        <Label text="Personal: " GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
        <Label text="Status: " GridPane.halignment="CENTER" GridPane.rowIndex="5"/>
        <Label text="Priority: " GridPane.halignment="CENTER" GridPane.rowIndex="6"/>
        <TableView fx:id="tableExecutors" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="3"
                   GridPane.rowIndex="8" GridPane.rowSpan="2">
            <columns>
                <TableColumn fx:id="tableColumnExecutors" minWidth="-Infinity" prefWidth="600.0"
                             text="Executors"/>
            </columns>
        </TableView>
        <Separator prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </Separator>
        <Label fx:id="titleLabel" text="Label" GridPane.columnIndex="1" GridPane.columnSpan="2"
               GridPane.halignment="LEFT" GridPane.rowIndex="1"/>
        <Label fx:id="ownerLabel" text="Label" GridPane.columnIndex="1" GridPane.columnSpan="2"
               GridPane.rowIndex="2"/>
        <Label fx:id="deadlineLabel" text="Label" GridPane.columnIndex="1" GridPane.columnSpan="2"
               GridPane.rowIndex="3"/>
        <Label fx:id="personalLabel" text="Label" GridPane.columnIndex="1" GridPane.columnSpan="2"
               GridPane.rowIndex="4"/>
        <Label fx:id="statusLabel" text="Label" GridPane.columnIndex="1" GridPane.columnSpan="2"
               GridPane.rowIndex="5"/>
        <Label fx:id="prioLabel" text="Label" GridPane.columnIndex="1" GridPane.columnSpan="2"
               GridPane.rowIndex="6"/>
        <Button fx:id="btnOK" mnemonicParsing="false" onAction="#buttonClicked" prefWidth="50.0" text="OK"
                GridPane.columnIndex="2" GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#buttonClicked" prefWidth="50.0"
                text="Cancel" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#buttonClicked" prefWidth="50.0"
                text="Edit..." GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
    </GridPane>
</AnchorPane>
