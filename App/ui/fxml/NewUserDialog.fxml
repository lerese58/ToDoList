<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="353.0" prefWidth="368.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="App.ui.NewUserDialogController">
    <children>
        <Label alignment="TOP_CENTER" layoutX="287.0" layoutY="19.0" text="New user" AnchorPane.leftAnchor="150.0"
               AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="20.0">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <TextField fx:id="txtName" layoutX="20.0" layoutY="65.0" AnchorPane.leftAnchor="100.0"
                   AnchorPane.rightAnchor="20.0"/>
        <TextField fx:id="txtLogin" layoutX="20.0" layoutY="109.0" AnchorPane.leftAnchor="100.0"
                   AnchorPane.rightAnchor="20.0"/>
        <Label layoutX="1.0" layoutY="69.0" text="Name: " AnchorPane.leftAnchor="10.0"/>
        <Label layoutX="39.0" layoutY="113.0" text="Login: " AnchorPane.leftAnchor="10.0"/>
        <PasswordField fx:id="txtPassword" layoutX="100.0" layoutY="153.0" AnchorPane.leftAnchor="100.0"
                       AnchorPane.rightAnchor="20.0"/>
        <Label layoutX="14.0" layoutY="157.0" text="Password: " AnchorPane.leftAnchor="10.0"/>
        <CheckBox fx:id="checkBoxIsOpen" layoutX="100.0" layoutY="202.0" mnemonicParsing="false"
                  text="  I am ready to get tasks from other users" AnchorPane.leftAnchor="100.0"
                  AnchorPane.rightAnchor="20.0">
            <font>
                <Font size="12.0"/>
            </font>
        </CheckBox>
        <ButtonBar layoutX="154.0" layoutY="299.0" prefHeight="40.0" prefWidth="248.0" AnchorPane.leftAnchor="100.0"
                   AnchorPane.rightAnchor="20.0">
            <buttons>
                <Button fx:id="btnOK" alignment="CENTER" mnemonicParsing="false" onAction="#onButtonClick" text="OK"/>
                <Button fx:id="btnCancel" alignment="CENTER" mnemonicParsing="false" onAction="#onButtonClick"
                        text="Cancel"/>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>
