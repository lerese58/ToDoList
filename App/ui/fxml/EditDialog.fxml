<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import tornadofx.control.DateTimePicker?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="195.0" prefWidth="480.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="App.ui.EditDialogController">
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="332.0" minWidth="10.0" prefWidth="297.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="98.0" minWidth="10.0" prefWidth="79.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="16.0" prefWidth="60.0"
                       text="Title: ">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="txtTitle" prefHeight="24.0" prefWidth="230.0" promptText="Input title"
                           GridPane.columnIndex="1">
                    <cursor>
                        <Cursor fx:constant="TEXT"/>
                    </cursor>
                    <font>
                        <Font name="System Bold" size="11.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </TextField>
                <DateTimePicker fx:id="dateTimePicker" format="HH:mm dd.MM.yyyy" prefWidth="285.0"
                                promptText="HH:mm dd.MM.yyyy" showWeekNumbers="true" GridPane.columnIndex="1"
                                GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </DateTimePicker>
                <ChoiceBox fx:id="menuPriority" cache="true" prefWidth="115.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="2">
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </ChoiceBox>
                <Button fx:id="btnOK" defaultButton="true" mnemonicParsing="false" onAction="#editTask"
                        prefHeight="24.0" prefWidth="60.0" text="OK" GridPane.columnIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Button>
                <Label alignment="CENTER_RIGHT" contentDisplay="TOP" prefHeight="16.0" prefWidth="60.0"
                       text="Deadline: " GridPane.rowIndex="1">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#onCancelButton"
                        prefHeight="24.0" prefWidth="60.0" text="Cancel" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Button>
                <Label fx:id="labelPriority" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="60.0"
                       text="Priority: " GridPane.rowIndex="2">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Executors: " GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                </Label>
            </children>
        </GridPane>
    </center>
    <top>
        <Label text="Edit task" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </Label>
    </top>

</BorderPane>
